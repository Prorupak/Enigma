    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "handlebars": "^4.7.8",
    "helmet": "^5.1.1",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^8.5.1",
